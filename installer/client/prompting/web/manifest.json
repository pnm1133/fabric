{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "Prompting",
    "short_name": "Prompting",
    "description": "A Very Good Project created by Very Good CLI.",
    "prefer_related_applications": false,
    "content_security_policy": {
        "extension_pages": "script-src 'self' blob: filesystem: https://www.gstatic.com/flutter-canvaskit/; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/Icon-192.png",
            "48": "icons/Icon-512.png",
            "128": "icons/Icon-512.png"
        }
    },
    "icons" : {
        "16": "icons/Icon-192.png",
        "48": "icons/Icon-512.png",
        "128": "icons/Icon-512.png"
    }
}
